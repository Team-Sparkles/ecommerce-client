{{#each items as |item|}}

<div data-id="{{item.id}}" class="item-tile">
    <!-- <div class="item-image"><img class="item-image" src="https://i.imgur.com/k6krfm0.png" alt="sample"></div> -->
    <div class="item-text">
      <h2>{{item.name}}</h2>
      <h3>${{item.price}}</h3>
    </div>
    <div class="item-cart-options">
        <form class="tile-cart">
            <select class="quantity-tab">
              <option value="1" selected="selected">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select><h4><button class="tile-cart-button">Add to Cart</button>
          </h4>
        </form>
    </div>
  </div>

{{/each}}
